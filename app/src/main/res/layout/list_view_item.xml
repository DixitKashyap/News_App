<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_image"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:src="@drawable/ic_launcher_background"
            >
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/news_article_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:text="hey,there will be news Article_title"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:ellipsize="marquee"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:gravity="center_vertical"
        android:textColor="#403D3D"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publishing House"

            android:textColor="#555353"
            android:layout_weight="2"
            android:id="@+id/publishing_house"
            android:layout_marginLeft="10dp">
        </TextView>

        <TextView
            android:id="@+id/publishing_date"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10:00 PM"
            android:gravity="end"
            android:layout_marginRight="10dp"></TextView>
    </LinearLayout>

</LinearLayout>